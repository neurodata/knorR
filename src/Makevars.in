CXX_STD = CXX11

UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S), Darwin)
    PKG_CXXFLAGS=-DUSING_R -I. -Icknor/libman -Icknor/libkcommon \
                 @CXXFLAGS@ -DNDEBUG \
                 -DPACKAGE_VERSION=\"@PACKAGE_VERSION@\" \
                 @NUMA_DEF@ -DBIND
    PKG_LIBS=@PTHREAD_LIB@ @NUMA_LIB@
else
    PKG_CXXFLAGS=-DUSING_R -Icknor/ -Icknor/libauto -Icknor/libman \
                 -Icknor/libkcommon \
                 @CXXFLAGS@ -DNDEBUG \
                 @NUMA_DEF@ $(SHLIB_OPENMP_CXXFLAGS) -DLINUX -DBIND \
                 -DPACKAGE_VERSION=\"@PACKAGE_VERSION@\"
    PKG_LIBS=$(SHLIB_OPENMP_CXXFLAGS) @PTHREAD_LIB@ @NUMA_LIB@
endif

all: $(SHLIB)

OBJECTS=rinterface.o cknor/libman/thread.o cknor/libman/task_thread.o cknor/libkcommon/thd_safe_bool_vector.o cknor/libkcommon/util.o cknor/libman/coordinator.o cknor/libman/kmeans_coordinator.o cknor/libman/kmeans_task_coordinator.o cknor/libkcommon/clusters.o cknor/libman/kmeans_task_thread.o cknor/libkcommon/dist_matrix.o cknor/libman/kmeans_thread.o cknor/libkcommon/io.o cknor/libkcommon/types.o cknor/libkcommon/prune_stats.o package_init.o cknor/libauto/kmeans.o cknor/libauto/min-tri-kmeans.o cknor/libman/medoid.o cknor/libman/medoid_coordinator.o cknor/libman/skmeans.o cknor/libman/skmeans_coordinator.o cknor/libman/fcm_coordinator.o cknor/libman/fcm.o
